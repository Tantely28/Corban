{% extends 'base.html.twig' %}

{% block title %}Offre d'emplois!{% endblock %}

{% block body %}
    <div class="container">
        <h3>Les offres d'emplois</h3>
        <table class="table table-striped">
            <a href="{{ path('offre_emplois_new') }}" class="text-left">
                <div class="btn btn-primary">Ajouter offre</div>
            </a>
            <thead>
            <tr>
                <th>Candidat</th>
                <th>CV</th>
            </tr>
            </thead>
            <tbody>
            {% for c in candidature %}
                <tr>
                    <td>{{ c.id }}</td>
                    <td>{{ c.candidat.nom }}</td>
                    <td>
                        <a href="{{ path('offre_emplois_show', { id: c.id }) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('offre_emplois_edit', { id: c.id }) }}" class="btn btn-default">Modifier</a>
                        <a href="#" onclick="deleteOffre({{ c.id }})" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
